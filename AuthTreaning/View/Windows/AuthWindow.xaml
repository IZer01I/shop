<Window x:Class="AuthTreaning.View.Windows.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AuthTreaning.View.Windows"
        mc:Ignorable="d"
        xmlns:viewmodel="clr-namespace:AuthTreaning.ViewModel"
        Title="AuthWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:AuthViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Width="250" Height="50" Text="{Binding Login}"/>
        <TextBox Grid.Row="1" Width="250" Height="50" Text="{Binding Password}"/>
        <Button Grid.Row="2" Width="150" Height="50" Command="{Binding AuthUserCommand}"/>
    </Grid>
</Window>
